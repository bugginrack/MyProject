StringMorph subclass: #StopwatchMorph	instanceVariableNames: 'stopwatch'	classVariableNames: ''	package: 'StopwatchMorph'!!StopwatchMorph methodsFor: 'initialization' stamp: 'AliakseiSyrel 12/19/2020 12:07'!initialize	super initialize.		stopwatch := Stopwatch new.	self font: (LogicalFont familyName: 'Source Sans Pro' pointSize: 50)! !!StopwatchMorph methodsFor: 'printing' stamp: 'AliakseiSyrel 12/19/2020 12:05'!printOn: aStream	"Format [-]HH:MM:SS"	| duration h m s |		duration := stopwatch duration.		h := duration hours abs.	m := duration minutes abs. 	s := duration seconds abs truncated.	duration negative ifTrue: [ aStream nextPut: $- ].		h < 10 ifTrue: [ aStream nextPut: $0. ].	h printOn: aStream. aStream nextPut: $:.	m < 10 ifTrue: [ aStream nextPut: $0. ].	m printOn: aStream. aStream nextPut: $:.	s < 10 ifTrue: [ aStream nextPut: $0. ].	s printOn: aStream.! !!StopwatchMorph methodsFor: 'stepping and presenter' stamp: 'AliakseiSyrel 12/19/2020 12:05'!step	super step.	self contents: (self printString)! !!StopwatchMorph methodsFor: 'stepping and presenter' stamp: 'AliakseiSyrel 12/19/2020 11:32'!start	stopwatch		reset;		activate;		start.	super start! !!StopwatchMorph methodsFor: 'stepping and presenter' stamp: 'AliakseiSyrel 12/19/2020 11:29'!stop	stopwatch end.	super stop! !